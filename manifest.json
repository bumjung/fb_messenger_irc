{
  "name": "fb-messenger-irc",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension allows users to mimic Messenger to have an IRC feel",
  "homepage_url": "https://github.com/CrypticDuo/fb_messenger_irc",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.messenger.com/*"
      ],
      "css": [
        "src/inject/css/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.messenger.com/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/js/inject.js"
      ]
    }
  ]
}